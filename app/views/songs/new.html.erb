<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <!-- <%= f.label :genre %>
  <%= f.text_field :genre %> -->
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <h2> Notes: </h2>

  <%= f.label :notes %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
    <input type="text" name="song[note_contents][]" id="song_notes_1" value="">
    <input type="text" name="song[note_contents][]" id="song_notes_2" value="">
    <input type="text" name="song[note_contents][]" id="song_notes_3" value="">
  <br>
  <%= f.submit %>
<% end %>
